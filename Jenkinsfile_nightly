#!groovy
properties([
        [$class: 'GithubProjectProperty', projectUrlStr: 'https://github.com/hmcts/finrem-ccd-e2e-tests.git'],
        parameters([
                string(name: 'RUNNING_ENV', defaultValue: '', description: 'CNP Environment to Run Tests in')
        ])
])

@Library("Infrastructure")

def product = "finrem"
def component = "ccd-e2e"

node {
    ws('workspace/finrem-ccd-e2e-tests') {
        stage('Checkout') {
            deleteDir()
            checkout scm
        }

        stage('Env Setup') {
            withSubscription('nonprod') {
                def az = { cmd -> return sh(script: "env AZURE_CONFIG_DIR=/opt/jenkins/.azure-${env.SUBSCRIPTION_NAME} az ${cmd}", returnStdout: true).trim() }
  
                env.TEST_SOLS_USER_NAME =  az('keyvault secret show --vault-name finrem-aat --name fr-solicitor-username --query value -o tsv').trim()
                env.TEST_SOLS_PASSWORD =  az('keyvault secret show --vault-name finrem-aat --name fr-solicitor-password --query value -o tsv').trim()
                env.TEST_CASEWORKER_USER_NAME =  az('keyvault secret show --vault-name finrem-aat --name fr-caseworker-username --query value -o tsv').trim()
                env.TEST_CASEWORKER_PASSWORD =  az('keyvault secret show --vault-name finrem-aat --name fr-caseworker-password --query value -o tsv').trim()
                env.TEST_JUDGE_USER_NAME =  az('keyvault secret show --vault-name finrem-aat --name fr-judge-username --query value -o tsv').trim()
                env.TEST_JUDGE_PASSWORD =  az('keyvault secret show --vault-name finrem-aat --name fr-judge-password --query value -o tsv').trim()
            }
        }

        stage('Journey Tests') {
            try {
                sh 'yarn install'
                sh 'yarn test-e2e'
            }
            catch (Exception err) {
                currentBuild.result = 'UNSTABLE'
                echo "RESULT: ${currentBuild.result}"
            } finally {
                archiveArtifacts 'functional-output/*'
            }

        }

        stage('After run') {
            echo "finished"
        }

    }
    deleteDir()
}
